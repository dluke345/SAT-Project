@model SATProject.ScheduledClass

@{
    ViewBag.Title = "Delete Schedule";
}

<h2>Delete Schedule</h2>

<h3>Are you sure you want to delete this?</h3>
<div id="courseWrapper">
    <div id="courseHeader">
        <h1>Schedule</h1><br />
    </div>
    <div id="courseRight">
        Course:
        @Html.DisplayFor(model => model.Cours.courseName)<br /><br />
        Start Date:
        @Html.DisplayFor(model => model.startDate)<br /><br />
        End Date:
        @Html.DisplayFor(model => model.endDate)<br /><br />
        Credit Hours:
        @Html.DisplayFor(model => model.creditHours)<br /><br />
        Instructor Name:
        @Html.DisplayFor(model => model.instructorName)<br /><br />
        Location:
        @Html.DisplayFor(model => model.location)<br /><br />
        Class Status:
        @Html.DisplayFor(model => model.ScheduledClassStatu.SCSName)
    </div>

    <div id="courseFooter">
        @using (Html.BeginForm()) {        
        <br />
        <input type="submit" value="Delete Schedule" />
            <br /><br />
        @Html.ActionLink("Back to Schedules", "Index")
        }
    </div>
</div>

        


