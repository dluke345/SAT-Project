@model SATProject.ScheduledClass

@{
    ViewBag.Title = "Edit Course Schedule";
}

<h2>Edit Course Schedule</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.scheduledClassId)

    <div id="courseWrapper">
        <div id="courseHeader">
            <h1>Schedule</h1><br />
        </div>
        <div id="courseRight">
            @Html.LabelFor(model => model.courseId, "Course"):
            @Html.DropDownList("courseId", String.Empty)
            @Html.ValidationMessageFor(model => model.courseId)<br /><br />
            @Html.LabelFor(model => model.startDate):
            @Html.EditorFor(Model => Model.startDate)
            @Html.ValidationMessageFor(model => model.startDate)<br /><br />
            @Html.LabelFor(model => model.endDate):
            @Html.EditorFor(Model => Model.endDate)
            @Html.ValidationMessageFor(model => model.endDate)<br /><br />
            @Html.LabelFor(model => model.creditHours):
            @Html.EditorFor(model => model.creditHours)
            @Html.ValidationMessageFor(model => model.creditHours)<br /><br />
            @Html.LabelFor(model => model.instructorName):
            @Html.EditorFor(model => model.instructorName)
            @Html.ValidationMessageFor(model => model.instructorName)<br /><br />
            @Html.LabelFor(model => model.location):
            @Html.EditorFor(model => model.location)
            @Html.ValidationMessageFor(model => model.location)<br /><br />
            @Html.LabelFor(model => model.statusId, "Class Status"):
            @Html.DropDownList("statusId", String.Empty)
            @Html.ValidationMessageFor(model => model.statusId)
        </div>
        <div id="courseFooter">
            <br />
            <input type="submit" value="Save Changes" />
            <br /><br />
            @Html.ActionLink("Back to Schedules", "Index")
        </div>
    </div>
}

    
