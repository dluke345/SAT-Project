@model SATProject.StudentStatu

@{
    ViewBag.Title = "Edit Student Status";
}

<h2>Edit Student Status</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.SSID)
    <div id="courseWrapper">
        <div id="courseHeader">
            <h1>Student Status</h1><br />
        </div>
        <div id="courseRight">
            @Html.LabelFor(model => model.SSName):
            @Html.EditorFor(model => model.SSName)
            @Html.ValidationMessageFor(model => model.SSName)
        </div>
        <div id="courseFooter">
            <br />
            <input type="submit" value="Save Changes" />
            <br /><br />
            @Html.ActionLink("Back to Student Statuses", "Index")
        </div>
    </div>
}