@model SATProject.ScheduledClassStatu

@{
    ViewBag.Title = "Edit Class Status";
}

<h2>Edit Class Status</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.SCSID)
    <div id="courseWrapper">
        <div id="courseHeader">
            <h1>Class Status</h1><br />
        </div>
        <div id="courseRight">
            @Html.LabelFor(model => model.SCSName):
            @Html.EditorFor(model => model.SCSName)
            @Html.ValidationMessageFor(model => model.SCSName)
        </div>
        <div id="courseFooter">
            <br />
            <input type="submit" value="Save Changes" />
            <br /><br />
            @Html.ActionLink("Back to Class Statuses", "Index")
        </div>
    </div>
}

    
