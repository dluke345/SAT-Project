@model SATProject.Models.ContactData

@{
    ViewBag.Title = "Contact Me";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <div id="mailContainer">
        <div id="mailHeader">
            <h1>Contact Me</h1><br />
        </div>
        <div id="mailLeft">
            @Html.LabelFor(model => model.Name):<br /><br /><br />
            @Html.LabelFor(model => model.Email):<br /><br /><br />
            @Html.LabelFor(model => model.Comments):<br /><br />
        </div>
        <div id="mailRight">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)<br /><br />
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)<br /><br />
            @Html.EditorFor(model => model.Comments)
            @Html.ValidationMessageFor(model => model.Comments)<br /><br />
        </div>
        <div id="mailFooter">
            <input type="submit" value="Send Message" />
        </div>
    </div>
}

